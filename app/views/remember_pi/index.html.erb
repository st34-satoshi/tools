<%= javascript_pack_tag 'pi-index' %>
<h2 class="mt-3">
<%= image_tag 'remember-pi/pi.png', width: 25, class: "align-text-middle" %>
<span class="align-bottom ps-1">Remember Pi</span>
</h2>

<h4>Enter next digit number.</h4>
<div id="pi-text" class="mt-3 ms-3">
<span class="align-bottom">3.
  <span id="entered-answer"></span>
</span>
<%= image_tag 'remember-pi/help_center.svg', width: 22 %>
</div>
<div class="d-flex flex-wrap flex-row bd-highlight mb-3 mt-3">
  <div class="p-2 bd-highlight"><button id="button-0" type="button" class="btn btn-outline-secondary">0</button></div>
  <div class="p-2 bd-highlight"><button id="button-1" type="button" class="btn btn-outline-secondary">1</button></div>
  <div class="p-2 bd-highlight"><button id="button-2" type="button" class="btn btn-outline-secondary">2</button></div>
  <div class="p-2 bd-highlight"><button id="button-3" type="button" class="btn btn-outline-secondary">3</button></div>
  <div class="p-2 bd-highlight"><button id="button-4" type="button" class="btn btn-outline-secondary">4</button></div>
  <div class="p-2 bd-highlight"><button id="button-5" type="button" class="btn btn-outline-secondary">5</button></div>
  <div class="p-2 bd-highlight"><button id="button-6" type="button" class="btn btn-outline-secondary">6</button></div>
  <div class="p-2 bd-highlight"><button id="button-7" type="button" class="btn btn-outline-secondary">7</button></div>
  <div class="p-2 bd-highlight"><button id="button-8" type="button" class="btn btn-outline-secondary">8</button></div>
  <div class="p-2 bd-highlight"><button id="button-9" type="button" class="btn btn-outline-secondary">9</button></div>
  <div class="p-2 bd-highlight"><button id="button-space" type="button" class="btn btn-outline-secondary">space</button></div>
  <div class="p-2 bd-highlight"><button id="button-new-line" type="button" class="btn btn-outline-secondary">new line</button></div>
  <div class="p-2 bd-highlight"><button id="button-answer" type="button" class="btn btn-outline-secondary">answer</button></div>
</div>
<div>current digit: <span id="current-digit">0</span></div>
<div class="mt-3">
start from
<span><input type="number" id="start-from-id" name="start-from" size="6" maxlength="10" value=1></span>
<button id="start-from-update-button" type="button" class="ms-1 btn btn-outline-secondary">update</button>
</div>

<%= render "answer" %>